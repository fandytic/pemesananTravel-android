<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fancik.travelb.TabFragmentPPBintang3">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nohp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:padding="10dp"
                android:text="081277890522"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/nohp"
                android:id="@+id/memberkomen">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ciko Sipahutar"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#2ecc71"
                        android:entries="@array/ratting"
                        android:layout_alignBaseline="@+id/nama"
                        android:layout_alignBottom="@+id/nama"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <EditText
                        android:id="@+id/komentar"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_below="@id/nama"
                        android:layout_gravity="center"
                        android:hint="Komentar"
                        android:inputType="textLongMessage"/>

                    <Button
                        android:id="@+id/btn_kirim"
                        android:layout_width="332dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/komentar"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:background="#448AFF"
                        android:text="Kirim"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/memberkomen">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/layanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Layanan"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/namakomen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layanan"
                        android:padding="20dp"
                        android:text="Fandy"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nilai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="Nilai : 5"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_above="@+id/komen"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/komen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/namakomen"
                        android:text="Wahh nyaman sekali travelnya"
                        android:textSize="18dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
